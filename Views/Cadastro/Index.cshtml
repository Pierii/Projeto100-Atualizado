@{
    ViewData["Title"] = "Cadastro | Ponto Digital";
    ViewData["H2"] = "Cadastro";
}
@{
    Html.RenderPartial("_NavBar", ViewData["User"]);
}
<main>
    <h2>@ViewData["H2"]</h2>
        <form method="POST" action='@Url.Action("Cadastrar", "Cadastro")'>
            <div>
                <label for="nome">Nome Completo</label>
                <br />
                <input id="nome" type="text" maxlength="20" minlength="3" name="nome" />
            </div>
            <div>
                <label for="email">E-mail</label>
                <br />
                <input id="email" type="email" name="email"/>
            </div>
            <div>
                <label for="senha">Senha</label>
                <br />
                <input id="senha" type="password" name="senha"/>
            </div>
            <div>
                <label for="data-nascimento">Data de Nascimento</label>
                <br />
                <input id="dataNascimento" type="date" name="dataNascimento"/>
            </div>
            <input type="submit" value="Cadastrar"/>
        </form>
</main>
